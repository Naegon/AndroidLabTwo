<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FlickrApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/blue_dark</item>
        <item name="colorOnPrimary">@color/blue_light</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green</item>
        <item name="colorSecondaryVariant">@color/green_dark</item>
        <item name="colorOnSecondary">@color/green_light</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Field">
        <item name="android:textColorHint">@color/black_60</item>
        <item name="startIconTint">@color/black_60</item>
        <item name="endIconTint">@color/black_60</item>
        <item name="helperTextTextColor">@color/white</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeColor">@color/black_60</item>
        <item name="hintTextColor">@color/black_60</item>
    </style>

    <style name="Button">
        <item name="android:padding">@dimen/margin_vertical</item>
        <item name="android:textSize">@dimen/text_button</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>